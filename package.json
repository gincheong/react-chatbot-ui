{
  "name": "react-chatbot-ui",
  "version": "0.2.5",
  "private": false,
  "main": "dist/index.js",
  "dependencies": {
    "@types/dompurify": "^2.2.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.9",
    "dompurify": "^2.2.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "styled-components": "^5.2.3",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "craco start",
    "test": "craco test",
    "eject": "react-scripts eject",
    "clean": "node ./npm-scripts/clean.js",
    "copy-files": "node ./npm-scripts/copy-files.js",
    "tsc": "npm run clean lib && npx ttsc && npm run copy-files",
    "babel": "npm run clean dist && babel lib -d dist --copy-files",
    "build": "npm run tsc && npm run babel"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./lib"
          ],
          "alias": {
            "@components": "./dist/components",
            "@context": "./dist/context",
            "@shared": "./dist/shared",
            "@shared/models": "./dist/shared/models",
            "@utils": "./dist/utils",
            "@assets": "./dist/assets"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-react": "^7.13.13",
    "@craco/craco": "^6.1.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "craco-alias": "^3.0.0",
    "immer": "^9.0.2",
    "ttypescript": "^1.5.12",
    "typescript-transform-paths": "^2.2.3"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "styled-components": "^5.2.3"
  }
}
